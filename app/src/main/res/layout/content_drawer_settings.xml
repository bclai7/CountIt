<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deicoapps.countit.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/pref_header_general"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                app:srcCompat="@android:color/darker_gray" />

            <Switch
                android:id="@+id/setting_vibrate_switch"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"

                android:checked="true"
                android:text="Vibration"
                tools:checked="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:color/darker_gray" />

            <Switch
                android:id="@+id/settings_reset_switch"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"

                android:checked="true"
                android:text="ResetConfirm"
                tools:checked="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:color/darker_gray" />

            <Switch
                android:id="@+id/settings_screen_switch"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"

                android:text="ScreenAwake"
                tools:checked="false" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:color/darker_gray" />

            <Switch
                android:id="@+id/settings_volume_switch"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"

                android:text="VolumeControls"
                tools:checked="false" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/pref_header_info"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contact_section"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="Contact"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:color/darker_gray" />

            <TextView
                android:id="@+id/version_section"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="15dp"

                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="Version"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>