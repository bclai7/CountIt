<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scounter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Counter Name"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/scounter_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scounter_name"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="35sp" />


    <ImageView
        android:id="@+id/horizontal_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:srcCompat="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/scounter_minus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="-"
        android:textSize="20sp"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/scounter_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/scounter_plus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="+"
        android:textSize="20sp"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/scounter_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>