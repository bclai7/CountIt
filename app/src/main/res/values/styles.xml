<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/switch_thumb_disabled_material_dark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="DefaultThemeNA" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/switch_thumb_disabled_material_dark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="DefaultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DefaultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NightMode" parent="DefaultTheme" >
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColorSecondaryInverse">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="android:titleTextStyle">@style/GrayTitleText</item>
    </style>
    <style name="GrayTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- SHOWCASE VIEW THEMES -->
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#99000000</item> <!-- the first two digits is the alpha code (in this case the alpha code makes it transparent), the rest are the actual color hex code digits. The higher the alpha number (first 2 digits), the darker the shade-->
        <item name="sv_showcaseColor">#000000</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
